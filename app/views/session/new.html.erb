<div id='login'>
<h1>Login</h1>

  <% if flash[:error] %>
  <br>
  <strong><%= flash[:error] %></strong>
  <br>
  <% end %>



  <%= form_tag login_path do %>

  <%= label_tag :email %>
  <br>
  <%= email_field_tag :email  %>

  <br>

  <%= label_tag :password  %>
  <br>
  <%= password_field_tag :password %>

  <br>

  <%= submit_tag 'Login' %>

<% end %>
</div>
