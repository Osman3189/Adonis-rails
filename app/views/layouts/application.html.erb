<!DOCTYPE html>
<html>
  <head>
    <title>AdonisRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header>
  <nav>

    <div class="nav">
      <div class="logo"><h1><%= link_to 'Adonis Athletics.', root_path %> </h1></div>


    <div class="midNav">
      <%= link_to 'About Us'  %>
      <%= link_to 'Locations' %>
      <%= link_to 'Noticeboard', messages_path %>
      <%= link_to 'Contact Us' %>




    </div>


      <div class="leftNav">
      <% if @current_user.present? %>
      Welcome, <%= @current_user.name %>
      <% if @current_user.admin? %>
        (admin)
      <% end %>

      <%= link_to 'Logout', login_path, method:'delete' %>
      <% else %>
      <%= link_to 'Login', login_path %>

      <%= link_to 'Register', new_user_path %>

      <% end %>
      </div>
    </div>
  </nav>

</header>

<div id="main">
    <%= yield %>
</div>

    <footer>
    <hr>
          &copy; Adonis Athletics
    </footer>
  </body>
</html>
